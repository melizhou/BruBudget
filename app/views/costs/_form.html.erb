<%= form_for([@user, @cost]) do |f| %>
  <p>
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </p>
  <p>
    <%= f.label :item %><br>
    <%= f.text_area :item %>
  </p>
   <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>